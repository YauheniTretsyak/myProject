@model PagedList.IPagedList<MvcPL.Models.UserViewModel>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" />

<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Id")
        </th>
        <th>
            @Html.DisplayName("Photo")
        </th>
        <th>
            @Html.DisplayName("Name")
        </th>
        <th>
            @Html.DisplayName("Email")
        </th>
        <th></th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserId)
            </td>
            <td>
                @if (item.Photo != null)
                {
                    @Html.Raw("<img style='width:80px; height:100px;' src=\"data:image/jpeg;base64,"
                                + Convert.ToBase64String(item.Photo) + "\" />")
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { Id = item.UserId }) |
                @Html.ActionLink("Details", "Details", new { Id = item.UserId }) |
                @Html.ActionLink("Delete", "Delete", new { Id = item.UserId })

            </td>
            <td>
                @Html.Action("CertainKnowledgeOfUser", "UsersKnowledge", new { id = item.UserId })
            </td>
        </tr>
    }

</table>
Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) from @Model.PageCount
@Html.PagedListPager(Model, page => Url.Action("DetailsForAdmin", new { page }),

  PagedListRenderOptions.EnableUnobtrusiveAjaxReplacing(new PagedListRenderOptions
  {
      LinkToFirstPageFormat = "<<",
      LinkToPreviousPageFormat = "Назад",
      LinkToNextPageFormat = "Вперед",
      LinkToLastPageFormat = ">>"
  }

              , new AjaxOptions()
              {
                  HttpMethod = "GET",
                  UpdateTargetId = "1212",
                  LoadingElementId = "loading"
              }))
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
}