@model IEnumerable<KnowledgeAccounting.Web.Models.UsersKnowledgeViewModel>


<p>
    @Html.ActionLink("Create New Users Knowledge", "Create", new { Id = ViewBag.Id })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.KnowledgeId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Degree)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>


        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @ViewBag.Knowledges[item.KnowledgeId]
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Degree)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>


            <td>
                @Html.ActionLink("Edit", "Edit", new { item.UsersKnowledgeId }) |
                @Html.ActionLink("Delete", "Delete", new { item.UsersKnowledgeId })
            </td>
        </tr>
    }

</table>